prototype(Sitegeist.PaperTiger:Field.Dropdown.Schema) < prototype(Neos.Fusion:Value) {
  value = Neos.Fusion:Case {
    isMultiple {
      condition = ${q(node).property('isMultiple')}
      renderer = ${Form.Schema.arrayOf(Form.Schema.string())}
    }
    default {
      condition = true
      renderer = ${Form.Schema.string()}
    }
  }
  value.@process.addIsRequired.@if.isDefined = ${q(node).property('isRequired')}
  value.@process.addIsRequired = ${value.required}
}
