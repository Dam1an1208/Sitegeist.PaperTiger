prototype(Sitegeist.PaperTiger:FieldContainer) < prototype(Neos.Fusion:Component) {

  @context.field = ${this.field}

  label = null
  field = Neos.Fusion.Form:Definition.Field
  attributes = Neos.Fusion:DataStructure

  class = ${Configuration.setting('Sitegeist.PaperTiger.rendering.classes.container')}
  errorClass = ${Configuration.setting('Sitegeist.PaperTiger.rendering.classes.error')}

  labelRenderer = 'Sitegeist.PaperTiger:Label'
  errorRenderer = 'Sitegeist.PaperTiger:Error'

  renderer = Neos.Fusion:Case {

    override {
      condition = Neos.Fusion:CanRender {
        type = 'Sitegeist.PaperTiger:FieldContainer.Override'
      }
      renderer = Sitegeist.PaperTiger:FieldContainer.Override {
        @apply.props = ${props}
      }
    }

    default {
      condition = true
      renderer = Neos.Fusion.Form:FieldContainer {
        @apply.props = ${props}
      }
    }
  }
}
